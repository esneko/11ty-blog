---
layout: base
permalink: /works/
eleventyNavigation:
  key: Works
  order: 2
---

<div class="container">
    <h1>Works</h1>
    {% set postslist = collections.posts %}
    <ol reversed class="postlist">
      {% for post in postslist | reverse %}
        <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
          <a href="{{ post.url | url }}" class="postlist-link">
            <h2>
              {% if post.data.title %}
                {{ post.data.title }}
              {% else %}
                <code>{{ post.url }}</code>
              {% endif %}
              </h2>
          </a>
          <time class="postlist-date" datetime="{{ post.date }}">
            {{ post.date }}
          </time>
        </li>
      {% endfor %}
    </ol>
</div>
